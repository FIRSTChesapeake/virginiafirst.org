<%= simple_form_for event, url: url, html: { class: "form-horizontal" } do |f| %>
  <% if @program.nil? %>
    <%= f.input :program_id, as: :hidden, input_html: {value: @program.id} %>
  <% end %>
  <%= f.input :name %>
  <%= f.input :starts_at, wrapper: :append do %>
    <%= f.input_field :starts_at, as: :string, class: "input-medium" %>
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
    </span>
  <% end %>
  <%= f.input :venue %>
  <%= f.input :address do %>
    <div class="controls-row">
      <%= f.input_field :street, placeholder: "Street", class: "span4" %>
    </div>
    <div class="controls-row">
      <%= f.input_field :city, placeholder: "City", class: "span2" %>
      <%= f.input_field :state, collection: us_states, class: "span2" %>
      <%= f.input_field :zip, placeholder: "Zip", class: "span1" %>
    </div>
  <% end %>

  <fieldset>
    <legend>Logistics</legend>
    <%= f.input :participant_limit, input_html: {class: "span1"} %>
    <%= f.input :setup_at, wrapper: :append do %>
      <%= f.input_field :setup_at, as: :string, class: "input-medium" %>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    <% end %>
    <%= f.input :teardown_at, wrapper: :append do %>
      <%= f.input_field :teardown_at, as: :string, class: "input-medium" %>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    <% end %>

  </fieldset>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>