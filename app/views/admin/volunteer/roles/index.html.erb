<%= link_to "New Role", [:new, :admin, :volunteer, :role], class: "btn btn-primary pull-right" %>

<h1>Volunteer Roles</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th class="optional">Number Needed</th>
    <th class="optional">Time Needed</th>
    <th class="optional">Reports To</th>
    <th></th>
    <th></th>
  </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= role.title %></td>
      <td class="optional"><%= role.default_number_needed %></td>
      <td class="optional">
        <%= l role.default_starts_at, format: :time12hr %> -
        <%= l role.default_ends_at, format: :time12hr %>
      </td>
      <td class="optional"><%= role.reports_to %></td>

      <% if can? :edit, role %>
        <td class="action">
          <%= link_to [:edit, :admin, role], class: "btn btn-small btn-success" do %>
            <i class="icon-pencil icon-white"></i> Edit
          <% end %>
        </td>
      <% end %>
      <% if can? :delete, role %>
        <td class="action">
          <%= link_to [:admin, role], method: :delete, confirm: "Are you sure?", class: "btn btn-danger btn-small" do %>
            <i class="icon-trash icon-white"></i> Delete
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
