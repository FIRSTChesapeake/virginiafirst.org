<% url ||= profile_path %>

<%= simple_form_for profile, url: url, html: {class: "form-horizontal"} do |f| %>
    <%= f.error_notification %>

    <%= f.input :name, required: true do %>
        <div class="controls-row controls-row-last">
          <%= f.input_field :first_name, placeholder: "First name", class: "span2", autofocus: true %>
          <%= f.input_field :last_name, placeholder: "Last name", class: "span2" %>
        </div>
    <% end %>
    <%= f.input :email %>
    <%= f.input :address, required: true do %>
        <div class="controls-row no-error">
          <%= f.input_field :street, placeholder: "Street", class: "span5" %>
        </div>
        <div class="controls-row controls-row-last">
          <%= f.input_field :city, placeholder: "City", class: "span2" %>
          <%= f.input_field :state, placeholder: "State", class: "span2" %>
          <%= f.input_field :zip, placeholder: "Zip", class: "span1" %>
        </div>
    <% end %>

    <%= f.input :primary_phone, required: true do %>
        <div class="controls-row controls-row-last">
          <%= f.input_field :primary_phone_type, as: :enum_select, class: "input-small" %>
          <%= f.input_field :primary_phone_number,
                            placeholder: "(555) 123-9876",
                            value: display_phone(f.object.primary_phone_number),
                            class: "input-medium" %>
        </div>
    <% end %>

    <%= f.input :alternate_phone do %>
        <div class="controls-row controls-row-last">
          <%= f.input_field :alternate_phone_type, as: :enum_select, class: "input-small" %>
          <%= f.input_field :alternate_phone_number,
                            placeholder: "(555) 123-9876",
                            value: display_phone(f.object.alternate_phone_number),
                            class: "input-medium" %>
        </div>
    <% end %>

    <%= f.input :age, as: :enum_select, input_html: { class: "input-small" } %>

    <%= f.input :shirt_size, as: :enum_select, input_html: { class: "input-small" } %>

    <%= f.input :current_occupation,
                hint: "This can be your job title or enter 'student' if attending school full time",
                input_html: { class: "input-large" } %>

    <%= f.input :current_organization,
                label: "Current employer or school",
                input_html: { class: "input-large" } %>

    <div class="form-actions">
      <%= f.button :submit, class: "btn-primary" %>
    </div>
<% end %>
