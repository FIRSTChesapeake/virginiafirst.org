<% content_for :content do %>
  <h1><%= @event.name %></h1>

  <ul class="nav nav-tabs">
    <li class="<%= active_tab?('events') %>">
      <%= link_to 'Assignments', event_path(@program, @event) %>
    </li>
    <li class="<%= active_tab?('profiles') %>">
      <%= link_to 'Volunteers', event_profiles_path(@program, @event) %>
    </li>
    <li class="dropdown <%= active_tab?('volunteer/reports') %>">
      <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
        Reports <b class="caret"></b>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to 'Volunteer Breakdown', event_volunteer_break_down_report_path(@program, @event) %>
        </li>
        <li>
          <%= link_to 'Volunteer Shirts', event_volunteer_shirts_report_path(@program, @event) %>
        </li>
      </ul>
    </li>
  </ul>

  <%= yield %>
<% end %>

<%= render file: 'layouts/application' %>
